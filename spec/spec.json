{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Company Appointments API",
    "license": {
      "name": "Companies House"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8083"
    }
  ],
  "paths": {
    "/company/{company_number}/appointments/{appointment_id}/full_record": {
      "get": {
        "summary": "Get details of an individual company officer appointment - returns AppointmentView object",
        "operationId": "findByAppointmentIdAndCompanyNumber",
        "tags": [
          "company officer appointment"
        ],
        "parameters": [
          {
            "name": "company_number",
            "in": "path",
            "required": true,
            "description": "The id of the company",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "appointment_id",
            "in": "path",
            "required": true,
            "description": "The id of the appointment",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Expected response to a valid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FullRecordView"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorised",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Put an appointment into the database collection",
        "operationId": "submitOfficerData",
        "tags": [
          "company officer appointment"
        ],
        "parameters": [
          {
            "name": "company_number",
            "in": "path",
            "required": true,
            "description": "The id of the company",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "appointment_id",
            "in": "path",
            "required": true,
            "description": "The id of the appointment",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Expected response to a valid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Appointment"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorised",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "FullRecordView": {
        "description": "Appointment View",
        "required": [
          "service_address",
          "appointed_on",
          "links",
          "name",
          "officer_role"
        ],
        "properties": {
          "service_address": {
            "$ref": "#/components/schemas/Address"
          },
          "usual_residence_address": {
            "$ref": "#/components/schemas/Address"
          },
          "appointed_on": {
            "type": "string",
            "format": "date-time"
          },
          "country_of_residence": {
            "type": "string"
          },
          "date_of_birth": {
            "$ref": "#/components/schemas/DOB"
          },
          "former_names": {
            "$ref": "#/components/schemas/FormerNames"
          },
          "identification": {
            "$ref": "#/components/schemas/Identification"
          },
          "links": {
            "$ref": "#/components/schemas/LinksView"
          },
          "name": {
            "type": "string"
          },
          "nationality": {
            "type": "string"
          },
          "occupation": {
            "type": "string"
          },
          "officer_role": {
            "enum": [
              "cic-manager",
              "corporate-director",
              "corporate-llp-designated-member",
              "corporate-llp-member",
              "corporate-member-of-a-management",
              "corporate-member-of-a-supervisory-organ",
              "corporate-member-of-an-administrative-organ",
              "corporate-nominee-director",
              "corporate-nominee-secretary",
              "corporate-secretary",
              "director",
              "judicial-factor",
              "llp-designated-member",
              "llp-member",
              "member-of-a-management",
              "member-of-a-supervisory-organ",
              "member-of-an-administrative-organ",
              "nominee-director",
              "nominee-secretary",
              "receiver-and-manager",
              "secretary"
            ],
            "type": "string"
          },
          "resigned_on": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Appointment": {
        "description": "Appointment",
        "required": [
          "officer_data",
          "internal_id",
          "appointment_id",
          "officer_id",
          "company_number",
          "created_at",
          "updated_at",
          "delta_at"
        ],
        "properties": {
          "officer_data": {
            "$ref": "#/components/schemas/OfficerData"
          },
          "internal_id": {
            "type": "string"
          },
          "appointment_id": {
            "type": "string"
          },
          "officer_id": {
            "type": "string"
          },
          "previous_officer_id": {
            "type": "string"
          },
          "company_number": {
            "type": "string"
          },
          "created_at": {
            "$ref": "#/components/schemas/InstantApi"
          },
          "updated_at": {
            "$ref": "#/components/schemas/InstantApi"
          },
          "delta_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "OfficerData": {
        "description": "Information regarding an individual officer.",
        "title": "Officer Data",
        "required": [
          "appointed_on",
          "service_address",
          "updated_at"
        ],
        "properties": {
          "service_address": {
            "$ref": "#/components/schemas/Address"
          },
          "usual_residential_address": {
            "$ref": "#/components/schemas/Address"
          },
          "service_addres_is_same_as_registered_office_address": {
            "type": "boolean"
          },
          "appointed_on": {
            "type": "string",
            "format": "date-time"
          },
          "is_pre_1992_appointment": {
            "type": "boolean"
          },
          "resigned_on": {
            "type": "string",
            "format": "date-time"
          },
          "country_of_residence": {
            "type": "string"
          },
          "links": {
            "$ref": "#/components/schemas/Links"
          },
          "nationality": {
            "type": "string"
          },
          "occupation": {
            "type": "string"
          },
          "officer_role": {
            "type": "string"
          },
          "is_secure_officer": {
            "type": "boolean"
          },
          "date_of_birth": {
            "type": "string"
          },
          "identification": {
            "$ref": "#/components/schemas/Identification"
          },
          "former_names": {
            "$ref": "#/components/schemas/FormerNames"
          },
          "surname": {
            "type": "string"
          },
          "forename": {
            "type": "string"
          },
          "other_forenames": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "honours": {
            "type": "string"
          },
          "company_number": {
            "type": "string"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Address": {
        "description": "Address",
        "required": [
          "address_line_1",
          "locality"
        ],
        "properties": {
          "address_line_1": {
            "type": "string"
          },
          "address_line_2": {
            "type": "string"
          },
          "care_of": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "locality": {
            "type": "string"
          },
          "po_box": {
            "type": "string"
          },
          "postal_code": {
            "type": "string"
          },
          "premises": {
            "type": "string"
          },
          "region": {
            "type": "string"
          }
        }
      },
      "DOB": {
        "description": "The officers date of birth",
        "title": "Date of Birth",
        "required": [
          "month",
          "year"
        ],
        "properties": {
          "day": {
            "type": "integer",
            "minimum": 1,
            "maximum": 31
          },
          "month": {
            "type": "integer",
            "minimum": 1,
            "maximum": 12
          },
          "year": {
            "type": "integer"
          }
        }
      },
      "FormerNames": {
        "description": "Former names for the officer, if there are any.",
        "title": "Former Names",
        "properties": {
          "forenames": {
            "type": "string"
          },
          "surname": {
            "type": "string"
          }
        }
      },
      "Identification": {
        "description": "Identification",
        "title": "Identification",
        "properties": {
          "identification_type": {
            "enum": [
              "EEA",
              "non-eea",
              "other-corporate-body-or-firm",
              "uk-limited-company"
            ],
            "type": "string"
          },
          "legal_authority": {
            "type": "string"
          },
          "legal_form": {
            "type": "string"
          },
          "place_registered": {
            "type": "string"
          },
          "registration_number": {
            "type": "string"
          }
        }
      },
      "LinksView": {
        "description": "Links to other resources associated with this officer list item.",
        "title": "Links View",
        "required": [
          "officer",
          "self"
        ],
        "properties": {
          "officer": {
            "$ref": "#/components/schemas/OfficerLinksView"
          },
          "self": {
            "type": "string"
          }
        }
      },
      "OfficerLinksView": {
        "description": "Link to this individual company officer appointment resource.",
        "title": "Officer Links View",
        "required": [
          "appointments"
        ],
        "properties": {
          "appointments": {
            "type": "string"
          }
        }
      },
      "Links": {
        "description": "Links to other resources associated with this officer list item.",
        "title": "Links",
        "required": [
          "officer",
          "self"
        ],
        "properties": {
          "officer": {
            "$ref": "#/components/schemas/OfficerLinks"
          },
          "self": {
            "type": "string",
            "description": "Link to this individual company officer appointment resource."
          }
        }
      },
      "OfficerLinks": {
        "description": "Link to this individual company officer appointment resource.",
        "title": "Officer Links",
        "required": [
          "self",
          "appointments"
        ],
        "properties": {
          "self": {
            "type": "string"
          },
          "appointments": {
            "type": "string"
          }
        }
      },
      "InstantApi": {
        "description": "Instant timestamp value",
        "title": "Instant Api",
        "required": [
          "at"
        ],
        "properties": {
          "at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Response": {
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
}